# Railway 자동 주입 변수 (설정 불필요)
# DATABASE_URL=postgresql://...
# REDIS_URL=redis://...
# PORT=8000

# 수동 설정 필요
NEO4J_URI=neo4j+s://xxx.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

DART_API_KEY=your_dart_api_key

# Cloudflare R2 (PDF 저장소) - 선택사항
# DART 크롤러로 다운로드한 PDF 파일을 저장하는 용도
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=raymontology-pdfs
R2_ENDPOINT_URL=https://xxxxx.r2.cloudflarestorage.com

SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

ENVIRONMENT=production
DEBUG=False

FRONTEND_URL=https://raymontology.up.railway.app

# 토스 앱인토스 mTLS 인증서 (raymondsrisk 서비스)
# Railway에서는 Secret Files 기능으로 등록
TOSS_MTLS_CERT_PATH=/app/certs/RAYMONDSRISK_MTLS_public.crt
TOSS_MTLS_KEY_PATH=/app/certs/RAYMONDSRISK_MTLS_private.key

# 토스 사용자 데이터 복호화 키 (토스에서 이메일로 제공)
# AES-256 GCM 복호화에 사용
TOSS_ENCRYPTION_KEY=your_toss_encryption_key
