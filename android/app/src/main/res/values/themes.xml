<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme (Dark) -->
    <style name="Theme.Raymontology" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/text_primary</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:navigationBarColor">@color/status_bar</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- No action bar -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.Raymontology.Splash" parent="Theme.Raymontology">
        <item name="android:windowBackground">@color/primary</item>
    </style>

</resources>
